{
	"$schema": "https://biomejs.dev/schemas/1.9.4/schema.json",
	"vcs": {
		"enabled": false,
		"clientKind": "git",
		"useIgnoreFile": false
	},
	"files": {
		"ignore": [
			"node_modules",
			".next",
			".vercel",
			"prisma",
			"dist",
			"build",
			"coverage",
			".env",
			".env.*",
			"*.log"
		],
		"ignoreUnknown": false
	},
	"formatter": {
		"enabled": true,
		"indentStyle": "tab"
	},
	"organizeImports": {
		"enabled": true
	},
	"linter": {
		"enabled": true,
		"rules": {
			"recommended": true
		}
	},
	"javascript": {
		"formatter": {
			"indentWidth": 2,
			"lineWidth": 120,
			"quoteStyle": "single",
			"semicolons": "asNeeded"
		}
	}
}
